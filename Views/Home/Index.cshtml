@{
    ViewData["Title"] = "Home Page";
}

@model coursework_itransition.Controllers.HomeController

<div class="p-2 text-center bg-light">     
    <h3 class="mb-2">
        Composition
    </h3>
</div>
<div class="table-responsive table-striped">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>AuthorID</th>
                    <th>LastEditDT</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var composition in Model._context.Compositions)
            {
                <tr>
                    <td><p>@composition.Title</p></td>
                    <td><p>@composition.AuthorID</p></td>
                    <td><p>@composition.LastEditDT</p></td> 
                    <td>
                        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#model-@composition.ID" >
                            <i class="fa fa-eye"></i>
                        </button>
                        @if(Model.CurrentUserIsAuthorOf(composition))
                        {  
                            <a asp-controller="Composition" asp-action="Edit" asp-route-id="@composition.ID" type="button" class="btn btn-dark">
                                <i class="fa fa-edit"></i>
                            </a>
                        }
                        <div class="modal fade" id="model-@composition.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">@composition.Title</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                @composition.Summary
                              </div>
                              <div class="modal-footer">
                              </div>
                            </div>
                          </div>
                        </div>
                    </td>
                </tr>
            }
        </table>    
</div>