@{
    ViewData["Title"] = "Edit";
}

@model coursework_itransition.Models.Chapter

@if(Model == null)
{
    <h2>Something went wrong :(</h2>
    <a href='javascript:history.go(-1)' type="button" class="btn btn-primary">Back</a>
    <a asp-controller="Home" asp-action="Index" type="button" class="btn btn-primary">Home</a>
}
else
{
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-9">
            <form asp-action="New">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Title" class="form-control" placeholder="Chapter title" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="Contents" class="form-control" rows="10"></textarea>
                </div>
                <div class="form-group" align="center">
                    <a href="javascript:history.go(-1)" type="button" class="btn btn-secondary" onclick="return confirm('you sure? :)');">Cancel</a>
                    <input type="submit" value="Save" class="btn btn-primary" 
                            asp-route-id="@ViewContext.RouteData.Values["id"]"
                            asp-route-returnUrl="@ViewContext.RouteData.Values["returnUrl"]">
                </div>
            </form>
        </div>
    </div>
}