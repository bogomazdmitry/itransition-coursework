@using Microsoft.AspNetCore.Identity
@using Identity.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-inline-flex order-md-4 ml-auto ">
    <div class="input-group ">
        <input type="text" class="form-control">
        <div class="input-group-append">
            <button class="btn btn-dark">
                <i class="fa fa-search" aria-hidden="true"></i>
            </button>
        </div>
    </div> 
</div>
@if (SignInManager.IsSignedIn(User) )
{
    <div class="order-md-2">
        <a class="nav-link text-dark" asp-area="" asp-controller="Composition" asp-action="New">New composition</a>
    </div>
    @if(User.IsInRole("Administrator"))
    {
        <div class="order-md-3">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Administrator">Admin</a>
        </div>
    }
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="order-md-5">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Info</a>
    </div>
    <div class="order-md-6">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </div>
}
else
{
    <div class="order-md-5">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="order-md-6">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
